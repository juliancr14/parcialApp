<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_form_color"
    android:padding="16dp">

    <!-- TÃ­tulo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Crear Nuevo Viaje"
        android:textSize="30sp"
        android:textStyle="italic"
        android:gravity="center" />

    <!-- Campo de fecha de inicio -->

    <Button
        android:id="@+id/toggleStartDateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:padding="5dp"
        android:layout_margin="30dp"
        android:textColor="@color/white"
        android:text="Seleccionar Fecha de Inicio" />

    <DatePicker
        android:id="@+id/startDatePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <!-- Campo de fecha de fin -->

    <Button
        android:id="@+id/toggleEndDateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"
        android:padding="5dp"
        android:layout_margin="30dp"
        android:text="Seleccionar Fecha de Fin" />

    <DatePicker
        android:id="@+id/endDatePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <!-- Campo de texto para el destino -->
    <TextView
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Destino" />

    <EditText
        android:id="@+id/destinationEditText"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="@color/text"
        android:radius="16dp"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/createTripButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/rounded_button"
        android:textColor="@color/white"
        android:padding="10dp"
        android:text="Crear Viaje" />
</LinearLayout>
